{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/404",
      "destination": "/404"
    }
  ],
  "redirects": [
    {
      "source": "/contacto.html",
      "destination": "/contacto",
      "permanent": true
    },
    {
      "source": "/terminos.html",
      "destination": "/terminos",
      "permanent": true
    },
    {
      "source": "/sobre-nosotros.html",
      "destination": "/sobre-nosotros",
      "permanent": true
    },
    {
      "source": "/comparar.html",
      "destination": "/comparar",
      "permanent": true
    },
    {
      "source": "/seguridad.html",
      "destination": "/seguridad",
      "permanent": true
    },
    {
      "source": "/investigacion.html",
      "destination": "/investigacion",
      "permanent": true
    },
    {
      "source": "/desarrollo.html",
      "destination": "/desarrollo",
      "permanent": true
    },
    {
      "source": "/recursos.html",
      "destination": "/recursos",
      "permanent": true
    },
    {
      "source": "/privacidad.html",
      "destination": "/privacidad",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|jpg|jpeg|png|gif|svg|webp|woff|woff2|ttf|eot|avif)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
